extends layout

block content
  header
    .container
      .brand.left
        h1 YO WEATHER
      .nav.right
        ul
          li
            a(href = "/") Home
          li
            a(href = "/") Features
          li
            a(href = "/") Reviews
      .clear-fix
      br
      br
      .wrapper
        .content.left
          h1.heading Get latest live weather updates around you.
          br
          p Simple nice user-friendly application of the weather.Only useful information.
          br
          form(action = "/show" method = "POST" name= "search-form").search-form
            input(type = "text" name = "query" placeholder = "country/city" required).location
            button(type = "submit" name = "submit-btn").btn.btn-primary Get Weather
         .hero.right
           img(src = "images/phone.png" alt = "weather image").phone
         .clear-fix
         .results
         h1= location
           img(src= icon alt= "weather image")
           h2 Weather is #{weather} and #{temp} &#8451;
